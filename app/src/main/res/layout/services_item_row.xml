<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">


    <RelativeLayout
        android:id="@+id/linearLayout4"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <CheckBox
            android:id="@+id/check_box"
            android:buttonTint="#2c2c2c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/serviceName"
            android:layout_toEndOf="@+id/check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Face Masks"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:textColor="@color/colorBlue" />

        <!--<TextView-->
            <!--android:id="@+id/rate_num"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:text="3"-->
            <!--android:layout_toStartOf="@+id/rate_icon"-->
            <!--android:textColor="@color/colorBlue" />-->

        <!--<ImageView-->
            <!--android:id="@+id/rate_icon"-->
            <!--android:layout_width="20dp"-->
            <!--android:layout_height="20dp"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:src="@drawable/star_rate" />-->

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/default_layout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/tv_bg"
        android:padding="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.195"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/bag_icon"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:src="@drawable/money_bag" />

        <TextView
            android:id="@+id/serviceCoast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="52dp"
            android:layout_toEndOf="@+id/bag_icon"
            android:text="34"
            android:textSize="17sp"
            android:textColor="@color/colorBlue" />

        <TextView
            android:id="@+id/coin_type"
            android:layout_toEndOf="@+id/serviceCoast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:text="@string/coin_type"
            android:textColor="@color/colorBlue" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/after_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/tv_bg"
        android:padding="5dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/default_layout">

        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="3dp"
            android:background="@drawable/tv_bg"
            android:padding="3dp">

            <ImageView
                android:id="@+id/bag_icon2"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:src="@drawable/money_bag" />

            <TextView
                android:id="@+id/service_price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="52dp"
                android:layout_toEndOf="@+id/bag_icon2"
                android:text="34"
                android:textColor="@color/colorBlue" />

            <TextView
                android:id="@+id/coin_type2"
                android:layout_toEndOf="@+id/service_price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:text="@string/coin_type"
                android:textColor="@color/colorBlue" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:padding="3dp"
            android:background="@drawable/tv_bg">

            <ImageView
                android:id="@+id/worker_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/worker_icon" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="160dp"
                android:layout_height="25dp"
                android:layout_marginStart="7dp"
                android:layout_toEndOf="@+id/worker_icon"
                android:background="@drawable/et_bg2" />

<!--            <ImageView-->
<!--                android:id="@+id/close_icon"-->
<!--                android:layout_width="15dp"-->
<!--                android:layout_height="15dp"-->
<!--                android:layout_centerVertical="true"-->
<!--                android:layout_marginStart="5dp"-->
<!--                android:layout_toEndOf="@+id/spinner"-->
<!--                android:src="@drawable/close" />-->

<!--            <ImageView-->
<!--                android:id="@+id/clock_icon"-->
<!--                android:layout_width="15dp"-->
<!--                android:layout_height="15dp"-->
<!--                android:layout_centerVertical="true"-->
<!--                android:layout_marginStart="10dp"-->
<!--                android:layout_toEndOf="@+id/close_icon"-->
<!--                android:src="@drawable/clock" />-->
        </RelativeLayout>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/ads_coast"
                        android:text="500 SAR"
                        android:textColor="@color/colorBlue"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/money_bag"/>


                </LinearLayout>



            </LinearLayout>

            <Button
                android:id="@+id/pay_via"
                android:text="@string/create"
                android:textColor="@color/colorWhite"
                android:background="@drawable/pay_via_bg"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:layout_width="140dp"
                android:layout_height="35dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/payPal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:src="@drawable/paypal"/>
                <ImageView
                    android:id="@+id/visa"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:src="@drawable/visa"/>
                <ImageView
                    android:id="@+id/master_card"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:src="@drawable/mastercard"/>
                <ImageView
                    android:id="@+id/am_express"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:src="@drawable/american_express"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>



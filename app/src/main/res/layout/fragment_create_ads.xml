            <TextView
                android:layout_marginTop="10dp"
                android:text="@string/ads_will_be"
                android:layout_gravity="center"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@string/devai_home_page"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:padding="7dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/search_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/upload_ads_image"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_width="250dp"
                    android:padding="3dp"
                    android:background="@drawable/et_bg2"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="22dp"
                        android:src="@drawable/upload_file"/>
                    <TextView
                        android:text="@string/upload_ada_image"
                        android:textColor="@color/colorBlue"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <TextView
                    android:text="@string/image_size"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/ads_description"
                    android:layout_gravity="center"
                    android:layout_width="250dp"
                    android:layout_marginTop="10dp"
                    android:paddingStart="10dp"
                    android:textSize="15sp"
                    android:gravity="top"
                    android:paddingTop="3dp"

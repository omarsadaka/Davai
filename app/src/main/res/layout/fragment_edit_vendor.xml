            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/et_bg2"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
